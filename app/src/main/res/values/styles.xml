<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BodyCheckTextView">
        <item name="android:letterSpacing">0.02</item>
    </style>
    <style name="BodyCheckMainTitle" parent="BodyCheckTextView">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bodyCheckTextPrimaryDartColor</item>
    </style>
    <style name="BodyCheckSubTitle" parent="BodyCheckTextView">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/bodyCheckTextPrimaryDartColor</item>
    </style>
    <style name="BodyCheckSmallLightTitle" parent="BodyCheckTextView">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/bodyCheckTextPrimaryColor</item>
        <item name="fontFamily">sans-serif-condensed-light</item>
    </style>
    <style name="BodyCheckSmallRegularTitle" parent="BodyCheckTextView">
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/bodyCheckTextPrimaryColor</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>
</resources>