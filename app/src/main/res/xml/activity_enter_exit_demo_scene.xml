<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/mainTitle">
            <Transform android:scaleY="0"/>
        </Constraint>
        <Constraint android:id="@+id/title_requirement">
            <Transform android:scaleY="0"/>
        </Constraint>
        <Constraint android:id="@+id/title_symp">
            <Transform android:scaleY="0"/>
        </Constraint>
        <Constraint android:id="@+id/guide_requirement">
            <PropertySet android:alpha="0"/>
            <Transform android:elevation="50dp"/>
        </Constraint>
        <Constraint android:id="@+id/guide1">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_symp"
                />
        </Constraint>
        <Constraint android:id="@+id/guide2">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/s2"
                />
        </Constraint>
        <Constraint android:id="@+id/guide3">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/s4"
                />
        </Constraint>
        <Constraint android:id="@+id/s1"><PropertySet android:alpha="0"/></Constraint>
        <Constraint android:id="@+id/s2"><PropertySet android:alpha="0"/></Constraint>
        <Constraint android:id="@+id/s3"><PropertySet android:alpha="0"/></Constraint>
        <Constraint android:id="@+id/s4"><PropertySet android:alpha="0"/></Constraint>
        <Constraint android:id="@+id/s5"><PropertySet android:alpha="0"/></Constraint>
        <Constraint android:id="@+id/s6"><PropertySet android:alpha="0"/></Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/mainTitle">
            <Transform android:scaleY="1"/>
        </Constraint>
        <Constraint android:id="@+id/title_requirement">
            <Transform android:scaleY="1"/>
        </Constraint>
        <Constraint android:id="@+id/title_symp">
            <Transform android:scaleY="1"/>
        </Constraint>
        <Constraint android:id="@+id/guide_requirement">
            <PropertySet android:alpha="1"/>
            <Transform android:elevation="0dp"/>
        </Constraint>
        <Constraint android:id="@+id/s1"><PropertySet android:alpha="1"/></Constraint>
        <Constraint android:id="@+id/s2"><PropertySet android:alpha="1"/></Constraint>
        <Constraint android:id="@+id/s3"><PropertySet android:alpha="1"/></Constraint>
        <Constraint android:id="@+id/s4"><PropertySet android:alpha="1"/></Constraint>
        <Constraint android:id="@+id/s5"><PropertySet android:alpha="1"/></Constraint>
        <Constraint android:id="@+id/s6"><PropertySet android:alpha="1"/></Constraint>
    </ConstraintSet>

    <Transition
        app:motionInterpolator="easeIn"
        app:constraintSetStart="@+id/end"
        app:constraintSetEnd="@id/start"
        app:duration="500">

        <KeyFrameSet>
            <KeyAttribute app:motionTarget="@id/s1" app:framePosition="85" android:rotation="0"/>
            <KeyAttribute app:motionTarget="@id/s1" app:framePosition="95" android:rotation="-3"/>
            <KeyAttribute app:motionTarget="@id/s1" app:framePosition="95" android:rotation="-3"/>
            <KeyAttribute app:motionTarget="@id/s2" app:framePosition="85" android:rotation="0"/>
            <KeyAttribute app:motionTarget="@id/s2" app:framePosition="95" android:rotation="-3"/>
            <KeyAttribute app:motionTarget="@id/s2" app:framePosition="95" android:rotation="-3"/>
            <KeyAttribute app:motionTarget="@id/s5" app:framePosition="85" android:rotation="0"/>
            <KeyAttribute app:motionTarget="@id/s5" app:framePosition="95" android:rotation="-3"/>
            <KeyAttribute app:motionTarget="@id/s5" app:framePosition="95" android:rotation="-3"/>
            <KeyAttribute app:motionTarget="@id/s6" app:framePosition="85" android:rotation="0"/>
            <KeyAttribute app:motionTarget="@id/s6" app:framePosition="95" android:rotation="-3"/>
            <KeyAttribute app:motionTarget="@id/s6" app:framePosition="95" android:rotation="-3"/>

            <KeyAttribute app:motionTarget="@id/s3" app:framePosition="85" android:rotation="0"/>
            <KeyAttribute app:motionTarget="@id/s3" app:framePosition="95" android:rotation="3"/>
            <KeyAttribute app:motionTarget="@id/s3" app:framePosition="95" android:rotation="3"/>
            <KeyAttribute app:motionTarget="@id/s4" app:framePosition="85" android:rotation="0"/>
            <KeyAttribute app:motionTarget="@id/s4" app:framePosition="95" android:rotation="3"/>
            <KeyAttribute app:motionTarget="@id/s4" app:framePosition="95" android:rotation="3"/>
        </KeyFrameSet>
    </Transition>
</MotionScene>
